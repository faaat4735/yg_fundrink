<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/sw_285dp"
        android:layout_height="@dimen/sw_308dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_pop">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18.0dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22.0dp"
            android:text="温馨提示"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/sw_35dp"
            android:layout_height="@dimen/sw_35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10.0dp"
            android:layout_marginRight="10.0dp"
            android:src="@drawable/btn_protocol_close"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginLeft="24.0dp"
            android:layout_marginRight="24.0dp"
            android:layout_marginTop="12.0dp"
            android:lineSpacingExtra="3.0dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text=""/>

        <TextView
            android:id="@+id/tv_btn_iknown"
            android:layout_width="236.0dp"
            android:layout_height="50.0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/sw_50dp"
            android:text="同意并继续"
            android:paddingTop="12.0dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="16.0dp"
            android:background="@drawable/btn_green"
            android:layout_marginBottom="22.0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content"/>

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_20dp"
            android:text="退出应用"
            android:textColor="@color/black"
            android:textSize="17.0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_btn_iknown" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>