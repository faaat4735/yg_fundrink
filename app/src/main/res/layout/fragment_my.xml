<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_my_top"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="@drawable/img_my_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_headicon"
        android:layout_width="@dimen/sw_57dp"
        android:layout_height="@dimen/sw_57dp"
        android:background="@drawable/head_default"
        android:layout_marginLeft="@dimen/sw_21dp"
        android:layout_marginTop="@dimen/sw_59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:layout_marginLeft="@dimen/sw_11dp"
        android:layout_marginTop="@dimen/sw_5dp"
        app:layout_constraintLeft_toRightOf="@id/iv_headicon"
        app:layout_constraintTop_toTopOf="@id/iv_headicon"/>

    <TextView
        android:id="@+id/tv_invitecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码:1234545"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginLeft="@dimen/sw_11dp"
        android:layout_marginBottom="@dimen/sw_4dp"
        app:layout_constraintLeft_toRightOf="@id/iv_headicon"
        app:layout_constraintBottom_toBottomOf="@id/iv_headicon"/>
    
    <Button
        android:id="@+id/btn_copy_invitecode"
        android:layout_width="@dimen/sw_37dp"
        android:layout_height="@dimen/sw_16dp"
        android:background="@drawable/btn_my_copy"
        android:text="复制"
        android:textSize="12dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/tv_invitecode"
        app:layout_constraintTop_toTopOf="@id/tv_invitecode"
        app:layout_constraintBottom_toBottomOf="@id/tv_invitecode"/>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginLeft="@dimen/sw_10dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:layout_marginTop="@dimen/sw_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_my_top"/>

    
    <Button
        android:layout_width="@dimen/sw_330dp"
        android:layout_height="@dimen/sw_50dp"
        android:background="@drawable/my_exit_btn"
        android:text="切换账号"
        android:textSize="12dp"
        android:textColor="#5F6471"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/sw_32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycle_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>